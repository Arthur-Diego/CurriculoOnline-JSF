<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.1.xsd">
    
    
    <beans:bean id="appUserDetailsService" class="com.ferasweb.curriculoonline.security.AppUserDetailsService" />
	
    <http pattern="/home.xhtml" security="none" />
    
    <http auto-config="true" >
        <intercept-url pattern="/**" access="ROLE_ADMIN"/>
        <form-login 
            login-page="/home.xhtml"
            default-target-url="/inicio.xhtml"
            authentication-failure-url="/home.xhtml"
        />
    </http>
	
    <authentication-manager>
        <authentication-provider user-service-ref="appUserDetailsService">
            
        </authentication-provider>
    </authentication-manager>
           
</beans:beans>